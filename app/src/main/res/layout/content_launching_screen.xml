<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bradleycooper.dissonance.LaunchingScreen"
    tools:showIn="@layout/activity_launching_screen"
    android:background="@color/colorMaterialGrey900"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayoutStartSet"
        android:clickable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageViewHeadphones"
            android:src="@drawable/headphoneswhitealt"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dissonance"
            android:id="@+id/textViewLogo"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorMaterialGrey200"
            android:textStyle="bold|italic"
            android:textSize="40dp"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gesture controlled DJing with real time mixing, recording, and sharing. "
            android:id="@+id/textViewAppDescription"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorMaterialGrey500"
            android:textAlignment="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO TO MAIN PAGE"
            android:id="@+id/buttonMain"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="GET STARTED"
            android:id="@+id/textViewGetStarted"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:layout_marginTop="25dp" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/card_view_pair"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/card_view_playlist" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/card_view_twitter"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayoutStartSet"
        android:background="@color/colorMaterialGrey700"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Click to start your set!"
            android:id="@+id/textViewStart"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorMaterialGrey100"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewRedo"
        android:layout_gravity="right"
        android:src="@drawable/startovergrey2"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="15dp"
        android:visibility="visible"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewInfo"
        android:src="@drawable/info"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:padding="3dp" />

</RelativeLayout>
