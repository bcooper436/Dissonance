<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="google.com.dissonance.MainActivity"
    android:background="@color/colorMaterialGrey900">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:id="@+id/relativeLayout"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageViewPlay"
            android:layout_centerHorizontal="true"
            android:src="@drawable/playalt"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/textViewSongTitle"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Just Jammin&apos; - Gramatik"
            android:id="@+id/textViewSongTitle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageViewPause"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pausealt"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/textViewSongTitle"
            android:padding="10dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to pair"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:visibility="invisible" />

    <Button
        android:text="End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_pair"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:id="@+id/button1"
        android:layout_alignEnd="@+id/btn_pair"
        android:layout_marginLeft="15dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Effect:"
        android:id="@+id/textView2"
        android:textColor="@color/colorMaterialGrey400"
        android:layout_above="@+id/textViewCurrentEffect"
        android:layout_alignLeft="@+id/textViewCurrentEffect"
        android:layout_alignStart="@+id/textViewCurrentEffect"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volume"
        android:id="@+id/textViewCurrentEffect"
        android:textColor="@color/colorMaterialGrey100"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100%"
        android:id="@+id/textViewEffectPercentage"
        android:layout_alignBottom="@+id/textViewCurrentEffect"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture Effects"
        android:id="@+id/switchGesture"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:checked="true"
        android:textColor="@color/material_grey_100"
        android:textSize="25dp" />

</RelativeLayout>
