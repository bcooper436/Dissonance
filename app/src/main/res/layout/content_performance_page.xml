<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bradleycooper.dissonance.PerformancePage"
    tools:showIn="@layout/activity_performance_page"
    android:background="@color/colorMaterialGrey900">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:id="@+id/relativeLayout"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageViewPlay"
            android:layout_centerHorizontal="true"
            android:src="@drawable/play1"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/textViewSongTitle"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Just Jammin&apos; - Gramatik"
            android:id="@+id/textViewSongTitle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageViewPause"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pause"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/textViewSongTitle"
            android:padding="10dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Active Effect = "
        android:id="@+id/textView"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorMaterialGrey100"
        android:textSize="20dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="none"
        android:id="@+id/textViewActiveEffect"
        android:textColor="@color/colorMaterialGrey100"
        android:textSize="25dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

</RelativeLayout>
